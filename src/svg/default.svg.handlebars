<svg viewBox="0 {{#if window_frame}}-22{{else}}0{{/if}} {{width}} {{height}}" xmlns="http://www.w3.org/2000/svg">
  <style>
    .container {
      padding: 0 10px;
      color: {{ palette.colors.white }};
    }
    .container pre {
      padding: 0;
      margin: 0;
      font: 12px {{ font_family }};
      line-height: 15px;
    }

    .user-input {
      margin: 4px -10px;
      color: {{ palette.intense_colors.white }};
      background-color: rgba(255, 255, 255, 0.1);
      padding: 2px 10px;
    }

    .bold,.prompt { font-weight: bold; }
    .italic { font-style: italic; }
    .underline { text-decoration: underline; }
    .dimmed { opacity: 0.7; }

    {{~#each palette.colors}}
    .fg-{{@key}} { color: {{this}}; }
    .bg-{{@key}} { background-color: {{this}}; }
    {{~/each}}
    {{~#each palette.intense_colors}}
    .fg-i-{{@key}} { color: {{this}}; }
    .bg-i-{{@key}} { background-color: {{this}}; }
    {{~/each}}
  </style>
  <rect width="100%" height="100%" y="{{#if window_frame}}-22{{else}}0{{/if}}" rx="4.5" {{#if window_frame}}clip-path="inset(5 0 0 0)"{{/if}} style="fill: {{ palette.colors.black}};" />
  {{~#if window_frame}}
  <rect width="100%" height="26" y="-22" clip-path="inset(0 0 -10 0 round 4.5)" style="fill: {{ palette.intense_colors.black }};"/>
  <circle cx="17" cy="-9" r="7" style="fill: {{ palette.colors.red }};"/>
  <circle cx="37" cy="-9" r="7" style="fill: {{ palette.colors.yellow }};"/>
  <circle cx="57" cy="-9" r="7" style="fill: {{ palette.colors.green}};"/>
  {{~/if}}
  <foreignObject x="0" y="10" width="{{width}}" height="{{content_height}}">
    <div xmlns="http://www.w3.org/1999/xhtml" class="container">
      {{#each interactions~}}
      <div class="user-input"><pre><span class="prompt">{{ input.prompt }}</span> {{ input.text }}</pre></div>
      <div class="term-output"><pre>{{#content @index}}{{/content}}</pre></div>
      {{~/each}}
    </div>
  </foreignObject>
</svg>
